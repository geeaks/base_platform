package com.ucf.customer.service.impl;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.ucf.customer.dao.UcfOperatorDao;
import com.ucf.customer.pojo.UcfOperator;
import com.ucf.customer.service.OperatorService;

@Service
public class OperatorServiceImpl implements OperatorService {
	
	@Autowired
	private UcfOperatorDao operatorDao;

	@Override
	public String queryUcfOperatorId() throws Exception {
		return operatorDao.queryUcfOperatorId();
	}

	@Override
	public void insertUcfOperator(UcfOperator ucfOperator) throws Exception {
		ucfOperator.setOperatorId(queryUcfOperatorId());
		operatorDao.insertUcfOperator(ucfOperator);
	}

	@Override
	public void updateUcfOperator(UcfOperator ucfOperator) throws Exception {
		operatorDao.updateUcfOperator(ucfOperator);
	}

}
