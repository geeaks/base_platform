<script type="text/javascript">
	function checkMail() {
		var s = document.getElementById("email").value;
		var pattern = /^[a-zA-Z0-9_\-]{1,}@[a-zA-Z0-9_\-]{1,}\.[a-zA-Z0-9_\-.]{1,}$/;
		var telpatt = /^1[3|4|5|8][0-9]\d{4,8}$/;
		if (s != "") {
			if (!telpatt.exec(s)) {
				alert('请输入正确的手机号 ');
				return ;
			}
			
		}else{
			alert("手机号不能为空 !");
		}
		

	}
	function checkTel() {
		var s = document.getElementById("email").value;
		var telpatt = /^1[3|4|5|8][0-9]\d{4,8}$/;
		if (s != "") {
			if (!telpatt.exec(s)) {
				alert('请输入正确的手机号');
			}
		}

	}
	
