<%@ page contentType="text/html;charset=UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<title>先锋支付--修改登录密码</title>
<jsp:include page="/WEB-INF/views/jsp/common/common.jsp"/>
<link href="${staticbase_platformPath}/new/css/set-pay-password.css" rel="stylesheet" type="text/css" />
<link href="${staticbase_platformPath}/new/css/host_newuser.css" rel="stylesheet" type="text/css" />
<link href="${staticbase_platformPath}/css/ucfgroup-nicevalidator-extends.css" rel="stylesheet">
<script src="${basePath}/passwordControl/index.js" type="text/javascript"></script>
<script src="${staticbase_platformPath}/js/jquery.validator.js" type="text/javascript"></script>
<style>
	p label{
		font-weight:400;
	}
	p input{
		height:40px !important;
	}
</style>
</head>
<body>
<c:set var="tab" value="4" scope="application"/>
	<c:import url="/common/head.htm"></c:import>
	<section class="bgc-gray">
		<div class="box">
			<div class="main background-wite ps-md-passw">
				<div class="box_title pl20"><em class="f18">修改登录密码</em></div>
				<form action="${basePath}/pwd/modifylgnPwd.htm" id="pwdModForm" name="pwdModForm" method="post" data-validator-option="{theme:'ucfgroup_effect',timely:2}">
					<input type="hidden" name="payPassword"/>
					<p><label for="name" style="float:left;">原登录密码 : </label>
						<jsp:include page="../p2p/passwordControl/resource_pwd.jsp" /></p><br/><br/>
					<p><label for="name">新登录密码 :</label>
						<input type="password" id="newpwd" name="newpwd" class="idbox w228" data-tip="6-20位字符，必须包含：大写字母、小写字母、数字、符号至少两种"/></p>
					<p><label for="name">确认密码 :</label>
						<input type="password" id="repwd" name="repwd" class="idbox w228" onclick="CheckPsw();" data-tip="必须与上面一致"/></p>
					<p><label for="name">手机号码 :</label>${picna }&nbsp;</p>
					<p><label for="name">短信验证码 :</label>
						<input type="text" id="verCode" name="verCode" maxlength="6" data-tip="输入手机6位验证码，如：88866" style="width:105px; vertical-align: middle;margin-bottom:2px;"/>
						<input id="validPhoneCode" type="button" onclick="sendSMSNew(${cell},1);" style="height: 40px; font-size: 12px; padding-left:0px; width: 105px;color:#666666;margin-left:5px;" value="获取验证码">
					</p>
					<span style="display:inline-block; margin-left:123px; color:#f85048;">${msg}</span>
					</br>
					<a class="btn mt20 mgl113"  onclick="Form_Submit('pwdModForm');">确 定</a>
				</form>
			</div>
		</div>
	</section>
	<c:import url="/WEB-INF/views/jsp/common/newfooter.jsp"></c:import>

	<jsp:include page="../common/resource_js.jsp" />
</body>
<script type="text/javascript">
$(document).ready(function() {
	$('#pwdModForm').validator({
		stopOnError: false,
		 timely: true,
		 rules: {
			 pwdCheck: function(element) {
				 return (!(/^[A-Za-z]*$/.test(element.value)) && !(/^[0-9]*$/.test(element.value)) 
						&& /^[A-Za-z0-9-+_!@#$%^&*()]*$/.test(element.value)) || '密码不符合要求';
			 },checkLgnPwd:function (){
				 var pwd=$("#pwd").val();
				 var newpwd=$("#newpwd").val();
				 if(pwd==newpwd){
					 return "新登录密码不可与原登录密码相同";
				 }
				 return true;
			 }
		},
		fields: {
				'newpwd':'required;length[6~20];pwdCheck;checkLgnPwd;',
				'repwd':{
			   		rule: "required;match(newpwd)",
			   		msg: {match: "请确保两次输入登录密码相同!"}
				},
				'verCode':'required;length[6];'
		}
	});
});
/////

</script>
<script src="${staticbase_platformPath}/js/jquery.validator.js" type="text/javascript"></script>
<script src="${staticbase_platformPath}/js/zh_CN.js" type="text/javascript"></script>
<script src="${staticbase_platformPath}/js/ucfgroup-nicevalidator-extends.js" type="text/javascript"></script>
</html>