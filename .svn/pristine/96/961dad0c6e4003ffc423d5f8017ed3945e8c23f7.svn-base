<%@ page contentType="text/html;charset=UTF-8" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<title> 找回登录密码</title>
<jsp:include page="/WEB-INF/views/jsp/common/common.jsp"/>
<link rel="stylesheet" type="text/css" href="${staticMemberPath}/css/commons/index.css" />
<link rel="stylesheet" type="text/css" href="${staticMemberPath}/new/css/common.css" />
<jsp:include page="../common/resource_css.jsp"/>
<link rel="stylesheet" type="text/css" href="${staticMemberPath}/new/css/host_findpassword.css"/>
<link href="${staticMemberPath}/new/css/find-pay-password.css" rel="stylesheet" type="text/css" />
<link href="${staticMemberPath}/css/ucfgroup-nicevalidator-extends.css" rel="stylesheet">
<link href="${staticMemberPath}/css/bootstrap.css" rel="stylesheet">
</head>
<body>
<jsp:include page="/WEB-INF/views/jsp/common/headforpwd.jsp" />
<%-- <c:import url="/common/head.htm"></c:import> --%>
<section class="bgc-gray" >
<div class="fd-main">
	<div class="main-body background-wite pt20 h300">
	<div class="info-lock">请输入您需要找回登录密码的账户名</div>
	<form class="pl120" action="${basePath}/lgnpwd/findPwdByPhonePre.htm" id="findPwdByPhoneForm" name="findPwdByPhoneForm" method="post" data-validator-option="{theme:'ucfgroup_effect',timely:2}">
		<p><label for="name">账户名 :</label>
			<input class="w220" type="text" id="userNo" name="userNo" tabindex="1"/><br/>
		</p>
		<br/>
		<p><label for="name">验证码 :</label>
			<input class="w105" type="text" id="checkCode" name="checkCode" maxlength="4" tabindex="1" />
			<img class="pic-w" id="J-checkcode-img" title="点击图片刷新验证码" onclick="myReload()" class="checkcode-img" complete="complete" src="${basePath}/idcode.do" alt="输入验证码" style="cursor: pointer; margin-left: 5px; margin-top: -3px; width: 105px; height: 40px;" seed="JIndexForm-J-checkcode-img" smartracker="on" />
		</p>
		<br/>
		<!-- <a href="#" class="pl240">忘记账户名？</a> -->
		<span style="display:inline-block; margin-left:123px; color:#f85048;">${msg}</span>
		</br>
		
		<a class="btn mgl113" onclick="subForm();">下一步</a>
		
	</form>
	</div>
</div>
</section>
<c:import url="/WEB-INF/views/jsp/common/newfooter.jsp"></c:import>
<jsp:include page="../common/resource_js.jsp" />
</body>
<script type="text/javascript">
function myReload(){
	document.getElementById("J-checkcode-img").src=document.getElementById("J-checkcode-img").src + "?nocache="+new Date().getTime();
}
$(document).ready(function() {
 $('#findPwdByPhoneForm').validator({
		stopOnError: false,
		 timely: true,
		 rules: {
			 tel: [/^1\d{10}$/, '请输入正确的手机号']
		},
		fields: {
			'userNo':'required;tel;',
			'checkCode':'required'
		}
	});
	
});

function subForm(){
	$("#findPwdByPhoneForm").submit();
}
</script>
<script src="${staticMemberPath}/js/jquery.validator.js" type="text/javascript"></script>
<script src="${staticMemberPath}/js/zh_CN.js" type="text/javascript"></script>
<script src="${staticMemberPath}/js/ucfgroup-nicevalidator-extends.js" type="text/javascript"></script>
</html>
