<%@ page contentType="text/html;charset=UTF-8" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<META http-equiv="X-UA-Compatible" content="IE=9" >
<title>登录</title>
<c:set var="basePath" value="${pageContext.request.contextPath }" scope="application"/>
<script src="${staticbase_platformPath}/js/jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="${staticbase_platformPath}/js/commons/jquery.validator.js"></script>
<script type="text/javascript" src="${staticbase_platformPath}/js/commons/local/zh_CN.js"></script>
  <script src="${basePath}/jsp/p2p/passwordControl/index.js" type="text/javascript"></script>
<link href="${staticbase_platformPath}/css/shouyintai-login.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
	$(document).ready(function() {
		$('#loginForm').validator({
			 timely: true,
			 stopOnError: false,
			 
			 rules: {
				 tel: [/^1\d{10}$/, '请输入正确的手机号']
			},
			fields: {
				'username':'手机号:required;length[11];tel;',
					 'pwd':'支付密码:required;',
			   'checkCode':'验证码:required;length[4];remote[${basePath}/checkIdcode.do, checkCode];'
			}
			,
			 invalid: function(form, errors){
			         var html = '';
			         if (null!=errors&&errors.length>0) {
			        	html += '<span class="msg-box n-right" ><div><p class="msg_holder_red">'+errors[0]+'</p></div><span>'
			        }
			       $('#msg_holder').html(html);
			    }
			
		});
		$('#checkCode').keyup(function(event){
			var v = $(this).val();
			if(v!=null && v.length==4){
				$(this).trigger("validate");
			}
			if(event.keyCode == 13){
				Form_Submit('loginForm');
			}
		});
		
	});
	
	function myReload(){
		var src = $("img[dn='J-checkcode-img']").attr("src")+ "?nocache="+new Date().getTime();
		$("img[dn='J-checkcode-img']").attr("src",src);
	}
	</script>
<style>
.msg-wrap {
display: none;
}
.msg_holder_red {
background-color: #FFE7C8;
border: 1px solid #FF8062;
display: block;
height: 30px;
line-height: 10px;
margin-bottom: 10px;
margin-left: 00px;
padding-top: 8px;
text-align: left;
width: 230px;
}
#msg_holder {
position: relative;
}
.n-top, .n-right, .n-bottom, .n-left {
line-height: 0;
vertical-align: top;
outline: 0;
}
.n-default .n-left, .n-default .n-right {
margin-top: 5px;
}
.msg-box {
position: relative;
}
</style>
</head>

<body>
<div class="bg-body">
    <div class="logo-top">
    	<img src="${staticbase_platformPath}/images/logo1.png" alt="...">
    </div>
    <div class="login-all">
            <div class="login-title">
                登录先锋支付
            </div>                
            <form action="/base_platform/cashier/login.htm" id="loginForm" name="loginForm" method="post">
            <input type="hidden" name="orderId" value="${orderId }" />
            <input type="hidden" name="backUrl" value="${backUrl }" />
                <div class="login-body">
                    <div id="msg_holder">
				<span class="msg-box n-right">
				<c:if test="${msg!=null}">
				<div>
						<p class="msg_holder_red"><span>${msg }</span></p>
					</div>
				</c:if>
				<c:if test="${ usg!=null }">
				<div>
						<p class="msg_holder_red"><span>${usg }</span></p>
					</div>
				</c:if>
					<c:if test="${lsg!=null}">
				<div>
						<p class="msg_holder_red"><span>${lsg }</span></p>
					</div>
				</c:if>
				</span>
				</div>
				
                    <span class="name-img"><img src="${staticbase_platformPath}/images/user.jpg"></img></span>
                    <input type="text" class="input-block-level" placeholder="用户名" id="username" name="username">
                    </br></br></br>
                    <span class="pass-word-img"><img src="${staticbase_platformPath}/images/password.jpg"></img></span>
                    <jsp:include page="../p2p/passwordControl/resource_pwd_cashier_login.jsp" /> 
                    <br/>
                    <br/>
                    <br/>
                    <span class="pass-word-img mgt20"><img src="${staticbase_platformPath}/images/text.jpg"></img></span>
                    <input type="text" id="checkCode" name="checkCode" class="input-block-level wx mgt20" placeholder="验证码">
                    <span class="text mgt20"><img  dn='J-checkcode-img' title="点击图片刷新验证码"	onclick="myReload()"  complete="complete" src="${basePath}/idcode.do" alt="输入验证码" style="cursor: pointer;"	seed="JIndexForm-J-checkcode-img" smartracker="on"></img></span>
                    
                    <span class="login">
                    <a href="javascript:Form_Submit('loginForm');" class="btn btn-large btn-primary sign-in-btn" type="submit">登 录</a>
                    </span>
                      <br/>
                    <span class="sign-in"><a href="${staticbase_platformPath}/reg/index.htm">免费注册</a></span>
                    <span class="forget"><a href="${staticbase_platformPath}/lgnpwd/findPwd.htm">忘记密码？</a></span>
                    <div class="clear"></div>
                </div>
            </form>
        </div>
       	  <div class="logo-bottom">
    	版权为©2005-2013 大连先锋商务服务有限公司所有 辽ICP备13000797号
    	  </div>
        <div class="clear"></div>
</div>

</body>
</html>
