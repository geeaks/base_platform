	/**
	 * 
	 * Description: 移除属性
	 * 
	 * @Version1.0 2014-3-13 下午2:57:49 by 李晓明（lixiaoming@ucfgroup.com）创建
	 * @param key
	 */
	public void removeAttribute(String key) {
		RedisUtils.hashDelete(sessionId, key);
	}
	
	public void setExpir(String redisKey,int seconds){
		RedisUtils.setExpire(redisKey, seconds);
	}
	

	public void destroy() {
		RedisUtils.deleteKey(this.sessionId);
	}

	
}
