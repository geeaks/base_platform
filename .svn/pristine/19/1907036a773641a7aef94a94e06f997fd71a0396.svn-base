public class RedisSession {

	private String sessionId;


	public RedisSession(String sessionId) {
		this.sessionId = sessionId;
	}

	/**
	 * 
	 * Description: 获取属性
	 * 
	 * @Version1.0 2014-3-13 下午2:27:41 by 李晓明（lixiaoming@ucfgroup.com）创建
	 * @param key
	 * @return
	 */
	public Serializable getAttribute(String key) {
		return RedisUtils.hashGet(sessionId, key);
	}
	
	/**
	 * 
	 * Description: 判断指定属性是否存在
	 * @Version1.0 2014-3-18 下午4:58:09 by 李晓明（lixiaoming@ucfgroup.com）创建
	 * @param key
	 * @return
	 */
	public boolean hasAttribute(String key){
		return RedisUtils.hashExsit(sessionId, key);
	}

	/**
	 * 
	 * Description: 添加属性
	 * 
	 * @Version1.0 2014-3-13 下午2:27:45 by 李晓明（lixiaoming@ucfgroup.com）创建
	 * @param key
	 * @param value
	 */
	public void setAttribute(String key, Serializable value) {
		RedisUtils.hashPut(sessionId, key, value);
	}

