package com.ucf.customer.dao.impl;

import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.List;

import org.springframework.stereotype.Repository;

import com.ucf.customer.dao.UcfRealnamePhotoApplyDAO;
import com.ucf.customer.dao.base.BaseCustomerDao;
import com.ucf.customer.pojo.UcfRealnamePhotoApply;

@Repository
public class UcfRealnamePhotoApplyDAOImpl extends BaseCustomerDao
		implements UcfRealnamePhotoApplyDAO {
	private static String NAME_SPACE="com.ucf.customer.";
	
	@Override
	public void insert(UcfRealnamePhotoApply record) {
		String id = new SimpleDateFormat("yyyyMMdd").format(new Date()) +  queryUcfRealnamePhotoApplyId();
		record.setId(id);
		getSqlSession().insert(NAME_SPACE + "insert",
				record);
	}
	
	@Override
	public UcfRealnamePhotoApply selectByPrimaryKey(String id) {
		UcfRealnamePhotoApply _key = new UcfRealnamePhotoApply();
		_key.setId(id);
		UcfRealnamePhotoApply record = (UcfRealnamePhotoApply) getSqlSession()
				.selectOne(
						NAME_SPACE + "selectByPrimaryKey",
						_key);
		return record;
	}
	
	@Override
	public List<UcfRealnamePhotoApply> select(UcfRealnamePhotoApply record) {
		return this.queryForList(NAME_SPACE + "select", record);
	}
	
	@Override
	public int updateByPrimaryKeySelective(UcfRealnamePhotoApply record) {
		Integer rows = getSqlSession()
				.update(NAME_SPACE + "updateByPrimaryKeySelective",
						record);
		return rows;
	}
	
	private String queryUcfRealnamePhotoApplyId(){
		return this.getOne(NAME_SPACE + "queryUcfRealnamePhotoApplyId", null);
	}
}