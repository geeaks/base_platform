<%@ page contentType="text/html;charset=UTF-8" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<jsp:include page="/WEB-INF/views/jsp/common/common.jsp"/>
<title>找回支付密码</title>
<link rel="stylesheet" type="text/css" href="${staticMemberPath}/css/commons/index.css" />
<link rel="stylesheet" type="text/css" href="${staticMemberPath}/new/css/common.css" />
<jsp:include page="../common/resource_css.jsp"/>
<link rel="stylesheet" type="text/css" href="${staticMemberPath}/new/css/host_findpassword.css"/>
<link href="${staticMemberPath}/new/css/find-pay-password.css" rel="stylesheet" type="text/css" />
<link href="${staticMemberPath}/css/ucfgroup-nicevalidator-extends.css" rel="stylesheet">
</head>
<body>
<c:import url="/common/head.htm"></c:import>
<section class="bgc-gray">
<div class="fd-main">
	<div class="main-body background-wite pt20" style="">
	<div class="info-lock">请输入您需要找回支付密码的账户名</div>
	<form action="${basePath}/pwd/findPayPwdVerify.htm" style="margin-left:120px;" id="findPasswdPro" name="findPasswdPro" method="post" data-validator-option="{theme:'ucfgroup_effect',timely:2}">
		<p style="margin-bottom:5px;"><label for="name">账户名 :</label>
			<input type="text" id="cellNO" name="cellNO" tabindex="1"/></p>
		<!-- <a href="#" style="margin-left:245px;">忘记账户名？</a> -->
		<p style="margin-top:10px;"><label for="name">验证码 :</label>
			<input class="w105" maxlength="4" type="text" id="vercode" name="vercode" tabindex="1"/>&nbsp;<img id="J-checkcode-img" title="点击图片刷新验证码"	onclick="myReload()" class="checkcode-img add-mgt10" complete="complete" src="${basePath}/idcode.do" alt="输入验证码" style="cursor: pointer;margin-top:0px;margin-left:5px;height:40px;width:105px;margin-top:-4px;"	seed="JIndexForm-J-checkcode-img" smartracker="on"/> <!--a style="cursor: pointer;" onclick="myReload()"> 看不清？换一张</a--></p>
		<span style="display:inline-block; margin-left:123px; color:#f85048;">${msg}</span>
		</br>
		<a class="btn mt20 mgl113" onclick="subForm();">确 定</a>
	</form>
	</div>
</div>
</section>
<c:import url="/WEB-INF/views/jsp/common/newfooter.jsp"></c:import>
<jsp:include page="../common/resource_js.jsp" />
</body>
<script type="text/javascript">
$(document).ready(function() {
	$('#findPasswdPro').validator({
		stopOnError: false,
		 timely: true,
		fields: {
				'cellNO':'required;',
				'vercode':'required;length[4];'
		}
	});
});
function myReload(){
	document.getElementById("J-checkcode-img").src=document.getElementById("J-checkcode-img").src + "?nocache="+new Date().getTime();
}
function subForm(){
	$("#findPasswdPro").submit();
}
</script>
<script src="${staticMemberPath}/js/jquery.validator.js" type="text/javascript"></script>
<script src="${staticMemberPath}/js/zh_CN.js" type="text/javascript"></script>
<script src="${staticMemberPath}/js/ucfgroup-nicevalidator-extends.js" type="text/javascript"></script>
</html>
