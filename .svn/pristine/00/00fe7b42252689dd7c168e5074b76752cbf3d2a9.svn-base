<%@ page contentType="text/html;charset=UTF-8" %>
<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<jsp:include page="./resource_meta.jsp"/>
<jsp:include page="./resource_css.jsp"/>
<c:set var="basePath" value="${pageContext.request.contextPath }" scope="application"/>
<link href="${staticbase_platformPath}/new/css/user.css" rel="stylesheet" type="text/css"/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<script src="${staticbase_platformPath}/js/jquery-1.11.1.min.js"></script>
<script	 src="${staticbase_platformPath}/js/commons/bootstrap.min.js"></script>
<jsp:include page="./resource_js.jsp"/>
<script>
function sendSMS(cellNo,smsType) {
	var param = {
			cellNo: cellNo,
			smsType : smsType
		};
	$.ajax({
		type:'POST',
		async:true,
		timeout:30000,
		url:'${basePath}/sms/vfycode/send',
		data:param,
		beforeSend:function() {
			$('#validPhoneCode').attr("disabled","disabled");
		},
		error:function(){
			$('#validPhoneCode').removeAttr("disabled");
		},
		success:function(result) {
			freezeTime();
		},
		dataType:"json"
	});
};


function sendSMSNew(cellNo,smsType) {
	var param = {
			cellNo: cellNo,
			smsType : smsType
		};
	$.ajax({
		type:'POST',
		async:true,
		timeout:30000,
		url:'${basePath}/sms/send.htm',
		data:param,
		beforeSend:function() {
			$('#validPhoneCode').attr("disabled","disabled");
		},
		error:function(){
			$('#validPhoneCode').removeAttr("disabled");
		},
		success:function(result) {
			freezeTime();
		},
		dataType:"json"
	});
}
</script>