<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucf.customer">
<!-- 序列 -->
<select id="getUcfOperatorId" resultType="java.lang.String">
	select UCF_OPERATOR_SEQ.nextval from dual
</select>
<!-- insert UcfOperator -->
<insert id="insertUcfOperator" parameterType="com.ucf.customer.pojo.UcfOperator" keyProperty="id" useGeneratedKeys="true">
	<![CDATA[
		INSERT INTO UCF_OPERATOR (OPERATOR_ID,USER_ID,REAL_NAME,CELL,EMAIL,LOGIN_PWD,ROLE_ID,ROLE_NAME,ACTIVE,GMT_CREATE,GMT_MODIFY) 
		VALUES(#{operatorId,jdbcType=VARCHAR},#{userId,jdbcType=VARCHAR},#{realName,jdbcType=VARCHAR},#{cell,jdbcType=VARCHAR},
		#{email,jdbcType=VARCHAR},#{loginPwd,jdbcType=VARCHAR},#{roleId,jdbcType=VARCHAR},#{roleName,jdbcType=VARCHAR},
		#{active,jdbcType=VARCHAR},sysdate,sysdate)
	]]>
</insert>
<!-- update UcfOperator -->
<update id="updateUcfOperator" parameterType="com.ucf.customer.pojo.UcfOperator">
	UPDATE UCF_OPERATOR SET GMT_MODIFY=sysdate
	<if test="null!= loginPwd and ''!= loginPwd">
		,LOGIN_PWD = #{loginPwd}
	</if>
	<if test="null!= cell and ''!= cell">
		,CELL = #{cell}
	</if>
	<if test="null!= realName and ''!= realName">
		,REAL_NAME = #{realName}
	</if>
	<if test="null!= roleId and ''!= roleId">
		,ROLE_ID = #{roleId}
	</if>
	<if test="null != roleName and ''!= roleName">
		,ROLE_NAME = #{roleName}
	</if>
	<if test="null!= active and ''!= active">
		,ACTIVE = #{active}
	</if>
	<![CDATA[
		WHERE OPERATOR_ID = #{operatorId} 
	]]>
</update>
</mapper>
