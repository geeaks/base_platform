<%@ page contentType="text/html;charset=UTF-8"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<title>先锋支付--提现</title>
<jsp:include page="/WEB-INF/views/jsp/common/common.jsp"/>
<link href="${staticMemberPath}/new/css/set-pay-password.css" rel="stylesheet" type="text/css" />
<link href="${staticMemberPath}/new/css/host_newuser.css" rel="stylesheet" type="text/css" />
<link href="${staticMemberPath}/css/ucfgroup-nicevalidator-extends.css" rel="stylesheet">
<link href="${staticMemberPath}/new/css/find-pay-password.css" rel="stylesheet" type="text/css" />
<script src="${basePath}/jsp/p2p/passwordControl/index.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function(){
		$(".withdraw-bank").find("input").each(function(){
			if($(this).attr("checked")=='checked'){
				$(this).parent().addClass("hover-withdraw-bank");
			}
		});
		$(".withdraw-bank").click(function(){
			$(this).find("input").attr("checked","checked");
			$(".withdraw-bank").each(function(){
				$(this).removeClass("hover-withdraw-bank");
			});
			$(this).addClass("hover-withdraw-bank");
		});
	});
</script>
</head>
<body>
<c:set var="tab" value="2" scope="application"/>
	<c:import url="/common/head.htm"></c:import>
	<section class="bgc-gray">
		<div class="box">
			<div class="main background-wite ps-md-passw">
				<div class="box_title pl20"><em class="f18">提现</em>
					<a href="${basePath}/trade/tradeList.htm"> 提现记录</a>
					<a style="font-size:12px;margin:0; color:#ccc;" href="#">|</a>
					<a href="${basePath}/bank/add.htm">添加银行卡 </a>
				</div>
				<form id="withdrawForm" name="withdrawForm" action="${basePath}/withdraw/withdraw.htm" method="post" data-validator-option="{theme:'ucfgroup_effect',timely:2}">
					<input type="hidden" name="payPassword"/>
					<p style="padding-bottom:10px;"><label for="name" style="float:left;">可用余额 : </label>
						<span class="red">${money}</span>元</p>
						<input type="hidden" id="tail" value="${money}"/>
					</p>
					<c:if test="${!empty(cardList)}">
						<c:forEach items="${cardList}" var="bankCard" varStatus="status">
							<c:set var="cardLength" value="${fn:length(bankCard.cardNo)}" />
							<c:choose>
								<c:when test="${status.first}">
									<p><label for="bankCardId">选择银行卡 :</label>
										<span class="withdraw-bank">
											<input name="bankCardId" type="radio" value="${bankCard.id}" checked />
											<img src="${staticMemberPath}/new/images/logo/${bankCard.bankId}_1301.png"></img>
											<%-- <img src="${staticMemberPath}/images/gs-logo.png"></img> --%>
											<span class="pl40">尾号：${fn:substring(bankCard.cardNo, cardLength-4, cardLength)}</span>
											<span class="pl80 day-bg">1-3个工作日</span>
											<span class="pl40 pr20">限额49999元/次</span>
										</span>
									</p>
								</c:when>
								<c:otherwise>
									<p><label for="bankCardId"></label>
										<span class="withdraw-bank">
											<input name="bankCardId" type="radio" value="${bankCard.id}"/>
											<img src="${staticMemberPath}/new/images/logo/${bankCard.bankId}_1301.png"></img>
											<span class="pl40">尾号：${fn:substring(bankCard.cardNo, cardLength-4, cardLength)}</span>
											<span class="pl80 day-bg">1-3个工作日</span>
											<span class="pl40 pr20">限额49999元/次</span>
										</span>
									</p>
								</c:otherwise>
							</c:choose>
						</c:forEach>
					</c:if>
					<p style="padding-bottom:8px;"><label for="name">提现金额 :</label>
					<input id="fund" name="fund" class="user_name" type="text" data-tip="输入提取金额" /> 元 
					<span class="msg-box" for="fund"></span>
					</p>
					<p><label for="name" style="float:left;">支付密码 : </label>
						<jsp:include page="../p2p/passwordControl/resource_pwd.jsp" />
						<span class="passwordformError"></span>
						<p style="margin-left:100px;"><a style="margin-left:10px;" href="${basePath}/paypwd/beforeFind">忘记密码？</a></p>
					</p>
					<br/>
					<p><label for="name">到账时间 :</label>&nbsp 1-3个工作日
					</p>
					<p><label for="name">服务费 :</label> 免费</p>
					<p>
						<span style="display:inline-block; margin-left:123px; color:#f85048;">${msg}</span>
					</p>
					<a class="btn mt20 mgl113" onclick="submitForm();" href="javascript:void(0)">申请提现</a>
					<a class="btn2 mt20 mgl20" href="${basePath}/user/index.htm">返 回</a>
				</form>
			</div>
		</div>
	</section>
	<c:import url="/common/footer.htm"></c:import>
</body>
<script type="text/javascript">
	function submitForm(){
		$('#withdrawForm').trigger("validate");
		return;
		Form_Submit('withdrawForm');
	}
	$(document).ready(function() {
		$('#withdrawForm').validator({
			stopOnError: false,
			timely: true,
			rules: {
				fundCheck: function() {
					var tail=$("#tail").val();
					var fund=$("#fund").val();
					var num1=parseFloat(tail);
					var num2=parseFloat(fund);
					if(fund!=null && num1<num2){
						return '提现金额不能多于可用金额';
					}
					return true;
				}
			},
			fields: {
				'pwdVali':'required;length[6~20]',
				'fund':'required;range[0.01~];'
			} 
		});
	});
</script>
	<script src="${staticMemberPath}/js/jquery.validator.js" type="text/javascript"></script>
	<script src="${staticMemberPath}/js/zh_CN.js" type="text/javascript"></script>
	<script src="${staticMemberPath}/js/ucfgroup-nicevalidator-extends.js" type="text/javascript"></script>
</html>