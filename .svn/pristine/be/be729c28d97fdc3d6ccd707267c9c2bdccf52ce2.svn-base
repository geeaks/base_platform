function sendSMS(cellNo,smsType) {
	var param = {
			cellNo: cellNo,
			smsType : smsType
		};
	$.ajax({
		type:'POST',
		async:true,
		timeout:30000,
		url:'${basePath}/sms/vfycode/send',
		data:param,
		beforeSend:function() {
			$('#validPhoneCode').attr("disabled","disabled");
		},
		error:function(message){
			alert(message.responseText);
			$('#validPhoneCode').removeAttr("disabled");
		},
		success:function(result) {
			freezeTime();
		},
		dataType:"json"
	});
};


