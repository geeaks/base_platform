<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta name="viewport" content="width=device-width" />
<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE9" />
<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="basePath" value="${pageContext.request.contextPath }" />
<jsp:include page="/WEB-INF/views/jsp/common/common.jsp"/>
<link rel="stylesheet" type="text/css" href="${staticbase_platformPath}/css/commons/index.css" />
<link rel="stylesheet" type="text/css" href="${staticbase_platformPath}/new/css/common.css">
<script type="text/javascript" src="${staticbase_platformPath}/new/js/host_findpassword.js"></script>
<link href="${staticbase_platformPath}/new/css/set-pay-password.css" rel="stylesheet" type="text/css" />
<!--private js&css end-->
<jsp:include page="../common/resource_css.jsp"/>
<link href="${staticbase_platformPath}/css/ucfgroup-nicevalidator-extends.css" rel="stylesheet">
</head>
<body>
<%-- <c:import url="/common/head.htm"></c:import> --%>
<jsp:include page="/WEB-INF/views/jsp/common/headforpwd.jsp" />
    <section class="bgc-gray">
        <div class="box">
        
        <img src="${staticbase_platformPath}/images/find-psw2.png" class="find-img"/>
		<div class="main-body background-wite pt20">
		    <form class="" style="margin-left:150px;" action="${basePath}/lgnpwd/pwdModTelSuc.htm" id="pwdModTel" method="post" data-validator-option="{theme:'ucfgroup_effect',timely:2}">
		    	<p><label for="name">账户名 :</label>
		            ${mobilePhone}</p>
		       
		        <p><label for="name">新登录密码 :</label>
		            <input  type="password" id="pwd" name="pwd" tabindex="1" data-tip="必须是6-20个英文字母、数字或符号，不能是纯数字"/></p>
		          <p><label for="name">确认新密码 :</label>
		            <input  type="password" id="repwd" name="repwd" tabindex="1" data-tip=""/><span class="必须与上面输入一致"></p>
		        <span style="display:inline-block; margin-left:123px; color:#f85048;">${msg}</span>
		        </br>
		        <a class="btn mt20 mgl113" onclick="subForm();">下一步</a>
		    </form>
		</div>
        </div>
    </section>
    <c:set var="tab" value="2" scope="application"/>
<c:set var="tab1" value="2" scope="application"/>
<c:import url="/WEB-INF/views/jsp/common/newfooter.jsp"></c:import>
<jsp:include page="../common/resource_js.jsp"/>
	
	<script type="text/javascript">
	$(document).ready(function() {
		$('#pwdModTel').validator({
			stopOnError: false,
			 timely: true,
			 rules: {
				pwdCheck: function(element) {
					 return (!(/^[A-Za-z]*$/.test(element.value)) && !(/^[0-9]*$/.test(element.value)) 
							&& /^[A-Za-z0-9-+_!@#$%^&*()]*$/.test(element.value)) || '密码不符合要求';
				 }
			},
			fields: {
			   'pwd':'required;length[6~20];pwdCheck;',
			   'repwd':{
				   rule: "required;match(pwd)",
				   msg: {match: "请确保两次输入登录密码相同!"}
				}
			}
		});
	});
	function subForm(){
		$("#pwdModTel").submit();
	}
	</script>
	<script src="${staticbase_platformPath}/js/jquery.validator.js" type="text/javascript"></script>
<script src="${staticbase_platformPath}/js/zh_CN.js" type="text/javascript"></script>
<script src="${staticbase_platformPath}/js/ucfgroup-nicevalidator-extends.js" type="text/javascript"></script>
</body>
</html>
