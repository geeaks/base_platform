<%@ page contentType="text/html;charset=UTF-8"%>
<!DOCTYPE html>
<jsp:include page="../p2p/commons/resource_meta.jsp"/>
<jsp:include page="/WEB-INF/views/jsp/common/common.jsp"/>
<html>
<head>
<title>先锋支付</title>
<jsp:include page="commons/resource_css.jsp"/>
<jsp:include page="commons/resource_js.jsp"/>
<%
	String userName = (String)request.getAttribute("userName");
	String certNo = (String)request.getAttribute("certNo");
	String mobile = (String)request.getAttribute("mobile");
	String cell = (String)request.getAttribute("cell");
%>
</head>
<body>
	<section>
		<div class="box">
			<div class="host_title">资金托管平台<span>删除银行卡</span></div>
			<div class="main">
			<div class="box_title pl20"><em class="f18">我的银行卡</em></div>
			<div class="w902 mauto">
				<div class="h_border_b">
					<table>
						<colgroup>
                        	<col width="155">
                            <col width="745">
                        </colgroup>
                        <tbody class="h_open_tab f14">
                        	<tr>
                            	<th>姓名：</th>
                                <td>${requestScope.HID_user["realName"] }</td>
                            </tr>
                            <tr>
                            	<th>身份证： </th>
                                <td>
                                	${requestScope.HID_user["certNo"] }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <form action="${basePath}/p2p/deleteBankCard.do" method="post" id="postForm" name="postForm">
                <div class="h_border_b">
                	<p class="f14"><strong class="color-yellow1">请输入您要变更的银行卡号</strong> </p>
                    <table width="100%">
                    	<colgroup>
                        	<col width="155">
                            <col width="745">
                        </colgroup>
                        <tbody class="h_open_tab f14">
                        	<tr>
                            	<th>银行卡号：</th>
                                <td>
                                	${requestScope.HID_bankCard["cardNo"] } 
                                </td>
                            </tr>
                            <tr>
                            	<th>开户行地址：</th>
                                <td>
                                	${requestScope.HID_bankCard["province"] } 省  ${requestScope.HID_bankCard["city"] } 地区 ${requestScope.HID_bankCard["branchname"] }
                                </td>
                            </tr>
                            <tr>
                            	<th>此借记卡用于：</th>
                                <td>提现 或 快捷充值</td>
                            </tr>
                            <tr>
                            	<th>手机号码：</th>
                                <td>
                                	<label class="h_open_lab">${requestScope.HID_user["cell"] }</label>
	                                <input id="validPhoneCode" type="button" onclick="sendSMS('18612341234',1,'cellNoP2P_RECHARGE_REQUEST_INF_customer');" class="send_vfycode h_open_ipt h_open_btn ml10" value="获得短信验证码"><i id="sendSMSTipI"
													class="formvalidError formvalidError1" style="display: none;"></i><em id="sendSMSTipEm" class="f12"></em>
                                    <p class="color-yellow1 f14 pt10">为了确保您的银行卡及资金安全，请发送手机验证码证明是你本人在进行银行卡删除操作</p>
                                </td>
                            </tr>
                            <tr>
                            	<th>短信验证码：</th>
                                <td>
                                	<input type="text" id="vfyCode" maxlength="6" name="vfyCode" class="h_open_ipt" placeholder="请输入短信验证码">
                                </td>
                            </tr>
                            <tr>
                            	<th>请输入支付密码：</th>
                                <td>
                                	<input id="payPassword" name="payPassword" type="text" class="h_open_ipt" placeholder="请输入您的密码">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="pt20 pb100">
                    <table width="100%">
                    	<colgroup>
                        	<col width="155">
                            <col width="745">
                        </colgroup>
                        <tbody class="h_open_tab f14">
                            <tr>
                            	<th></th>
                                <td>
                                	<input type="submit" value="确认删除" class="but-gray but-yellow w130 mr15">
                                    <a href="#" class="but-gray but-blue w100 ml20">返回</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
	$(document).ready(function() {
		$('#postForm').validator({
			stopOnError: false,
			 timely: true,
			 rules: {
			},
			fields: {
			}
		});
	});
</script>
</body>
</html>