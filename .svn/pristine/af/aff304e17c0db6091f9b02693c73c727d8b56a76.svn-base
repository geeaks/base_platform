<%@ page contentType="text/html;charset=UTF-8" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<title>先锋支付--用户中心</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<jsp:include page="../common/resource_meta.jsp"/>
<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="basePath" value="${pageContext.request.contextPath }" />
<jsp:include page="../common/resource_css.jsp"/>
<!--private js&css start-->
<link href="${staticbase_platformPath}/new/css/user.css" rel="stylesheet" type="text/css">
<!--private js&css end-->
</head>
<body>
	<c:import url="/common/head.htm"></c:import>
	<div class="w980 mauto clearfix">
	<div class="user_nav">
    	<ul>
        	<li class="user_select">
            	<a href="#">账户总览</a>
            </li>
            <li><a href="${basePath}/trade/tradeList.htm">交易记录</a></li>
            <li><a href="${basePath}/user/basicinfo.htm">信息管理</a></li>
            <li><a href="${basePath}/bank/index.htm">银行卡管理</a></li>
            <li><a href="${basePath}/deposit/index.htm">充值</a></li>
            <li><a href="${basePath}/withdraw/index.htm">提现</a></li>
        </ul>
    </div>
    <form id="formValid" action="">
	<div class="user_right">
        <div class="user_right_box  mb20 pb20">
        	<div class="user_title"><h1><i class="ico_zhanghu"></i>账户信息</h1></div>
            <table class="yh_tab f14 mt20">
            	<colgroup>
                	<col width="130">
                    <col width="300">
                    <col width="180">
                    <col width="170">
                </colgroup>
                <tbody>
                	<tr>
                    	<th>可用金额：</th>
                        <td>
                        <c:if test="${error eq '0'}">通讯异常。。。。</c:if>
                        <c:if test="${error ne '0'}">
                        <em class="color-yellow1">
                        	<c:if test="${empty(money)}">0.00 元</c:if>
                        	<c:if test="${!empty(money) }">${money}元</c:if></em> <a href="${basePath}/deposit" class="button_cz">充值</a> <a href="${staticbase_platformPath}/withdraw" class="button_tx">提现</a>
                        	</c:if>
                        	
                        </td>
                        
                        <th></th>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
       
        
        <div class="user_right_box ">
        	<div class="user_title"><a class="f14 fr pr30 color-black" href="${basePath}/trade/tradeList.htm">更多<i class="ico_more"></i></a><h1><i class="ico_jilu"></i>交易记录</h1></div>
            <div class="w710 mauto pb20">
            	<table class="plan">
                	<colgroup>
                    	<col width="220">
                        <col width="150">
                        <col width="190">
                        <col width="140">
                        <%-- <col width="80"> --%>
                    </colgroup>
                    <thead>
                    	<tr>
                        	<th><div class="tl"  style="width: 90px;">交易日期时间</div></th>
                        	<th><div class="tl"  style="width: 200px;">名称</div></th>
                            <th><div class="tl" style="width: 100px;">交易金额（元）</div></th>
                            <th><div>交易状态</div></th>
                        </tr>
                    </thead>
                     <c:if test="${neter eq '0'}">通讯异常。。。。</c:if>
                     <c:if test="${neter ne '0' }">
                    <tbody>
                    	<c:if test="${empty(orders)}">
						    <c:out value="<tr>"  escapeXml="false"></c:out>
						    <c:out value="<td>交易记录为空!</td>" escapeXml="false"></c:out>
						    <c:out value="</tr>" escapeXml="false"></c:out>
						</c:if>
						<c:if test="${!empty(orders)}">
						
                    	<c:forEach items="${orders}" var="item">  
							<tr>
                        	<td><div class="tl">${item.date}</div></td>
                            <td><div class="tl">${item.typeName}</div></td>
                            <td><div class="tl"><em class="color-yellow1">${item.amount}</em></div></td>
                            <td>${item.orderStatus}</td>
	                    	<!-- <td><a href="/order/orderInfo.do/">详情</a></td> -->
                        	</tr>
						</c:forEach>
						</c:if>
                    	
                        <tr>
                        </tr>
                    </tbody>
                    </c:if>
                </table>
            </div>
        </div>
        
    </div>
    </form>    
</div>


	<c:import url="/common/footer.htm"></c:import>
	
	<jsp:include page="../common/resource_js.jsp"/>
</body>
</html>