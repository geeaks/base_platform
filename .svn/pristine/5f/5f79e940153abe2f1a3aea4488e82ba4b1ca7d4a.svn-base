<%@ page contentType="text/html;charset=UTF-8" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<title>先锋支付--用户login</title>


<jsp:include page="/WEB-INF/views/jsp/common/common.jsp"/>
<!--private js&css start-->
<link rel="stylesheet" type="text/css" href="${staticbase_platformPath}/new/css/host_findpassword.css"/>
<link href="${staticbase_platformPath}/new/css/person_login.css" rel="stylesheet" type="text/css" />
<script src="${basePath}/jsp/p2p/passwordControl/index.js" type="text/javascript"></script>
<style type="text/css">
p.tip span {font-weight:130px;
    background-color: yellow;
	color:red;}

p.tipp span {font-weight:130px;
    background-color: yellow;
	color:red;}

	
p.tippp span {font-weight:130px;
    background-color: yellow;
	color:red;}
	p.tipp span {font-weight:130px;
    background-color: yellow;
	color:red;}	
</style>
  
</head>
<body>
	<c:import url="/common/head.htm"></c:import>
<section>
<form action="${basePath}/login/login.htm" id="loginForm" name="loginForm" method="post">
<input type="hidden" name="redirectUrl" value="${redirectUrl}">
        <div class="g-main">
            <div class="g-shadow">
                <div class="gs-title">个人账户登录</div>
                <div class="gs-center">
                    <table>
                        <colgroup>
                            <col width="233" />
                            <col width="355" />
                        </colgroup>
                        <tbody>
                        	<tr>
                        	<th>&nbsp;</th>
                        	<td>
                        		<p class="tip"><span>${msg }</span></p>
							 	<p class="tipp"><span>${usg }</span></p>
							 	<p class="tippp"><span>${lsg }</span></p>
							 </td>
                        	</tr>
                            <tr>
                                <th>账户名：</th>
                                <td>
                                    <input value="${user.cell}" type="text" id="username" name="username" class="idbox w228" maxlength="11" placeholder="请输入手机号" />
                                </td>
                            </tr>
                            <tr>
                                <th> 登录密码：`1111111111111</th>
                                <td>
<!-- 										<input type="text" name="pwd"  class="idbox w228" maxlength="20" placeholder="请输入登录密码" onpaste="return false;"/>
 -->										<jsp:include page="../p2p/passwordControl/resource_pwd.jsp" />                                </td>
                            </tr>
                            <tr>
                                <th>验证码：</th>
                                <td>
                                    <input type="text" id="checkCode" name="checkCode" maxlength="4" class="idbox w123" placeholder="请输入提示验证码" />
                                    <div class="login_code">
                                        <img id="J-checkcode-img" title="点击图片刷新验证码"	onclick="myReload()" class="checkcode-img" complete="complete" src="${staticbase_platformPath}/idcode.do"
											alt="输入验证码" style="cursor: pointer;"	seed="JIndexForm-J-checkcode-img" smartracker="on"> 
										<a href="#" onClick="myReload()">看不清，换一个</a>
										<span class="msg-box" for="checkCode"></span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="gs_btn_login">
                        <input type="button" onclick="Form_Submit('loginForm')"  value="登录先锋支付账户" class="but-yellow but-gray "  /> &nbsp;<span><a href="${basePath}/lgnpwd/findPwd.htm">找回登录密码</a></span>
                    </div>
                </div>
                <div class="gs-footer">先锋支付，让你的资金安全更加有保证</div>
            </div>
        </div>
        </form>
    </section>
   <c:import url="/common/footer.htm"></c:import>
	<jsp:include page="../common/resource_js.jsp"/>
	<!--private js&css end-->
	<script type="text/javascript">
	$(document).ready(function() {
		$('#loginForm').validator({
			stopOnError: false,
			timely: true,
			 rules: {
				 tel: [/^1\d{10}$/, '请输入正确的手机号']
			},
			fields: {
				'username':'required;length[11];tel;',
				/* 'pwd':'required;length[6~20]', */
				'pwd':'required',
			   'checkCode':'required;length[4];remote[${basePath}/checkIdcode.do, checkCode];'
			} 
		});
		$('#checkCode').keyup(function(){
			var v = $(this).val();
			if(v!=null && v.length==4){
				$(this).trigger("validate");
			}
		});
	});
	
	function myReload(){
		document.getElementById("J-checkcode-img").src=document.getElementById("J-checkcode-img").src + "?nocache="+new Date().getTime();
	}
	</script>
</body>
</html>






