package com.ucf.customer.dao.impl;

import java.util.List;
import java.util.Map;

import javax.security.auth.login.AccountException;

import org.springframework.stereotype.Repository;

import com.ucf.customer.dao.UcfBankCardDao;
import com.ucf.customer.dao.base.BaseCustomerDao;
import com.ucf.customer.pojo.UcfBankCard;
import com.ucf.customer.utils.exception.CustomerException;

@Repository
public class UcfBankCardDaoImpl extends BaseCustomerDao implements UcfBankCardDao {

private static final long serialVersionUID = -1L;

	public void insertUcfBankCard(UcfBankCard ucfBankCard)throws Exception{
		this.insert("com.ucf.customer.insertUcfBankCard", ucfBankCard);
	}

	public void updateUcfBankCard(UcfBankCard ucfBankCard)throws Exception{
		this.update("com.ucf.customer.updateUcfBankCard", ucfBankCard);
	}

	public void deleteUcfBankCard(String cardNo)throws Exception{
		this.delete("com.ucf.customer.deleteUcfBankCard", cardNo);
	}

	public List<UcfBankCard> queryUcfBankCardListByWhere(UcfBankCard ucfBankCard)throws CustomerException{
		return this.queryForList("com.ucf.customer.queryUcfBankCardByWhere", ucfBankCard);
	}

	@Override
	public String getBankCardSeq() throws AccountException {
		return this.getOne("com.ucf.customer.getBankCardSeq", "");
	}

	@Override
	public UcfBankCard queryUcfBankCardById(String id) throws Exception {
		return  this.getOne("com.ucf.customer.queryUcfBankCardById", id);
	}
	
	@Override
	public UcfBankCard queryUcfBankCard(UcfBankCard bankCard) throws Exception {
		return  this.getOne("com.ucf.customer.queryUcfBankCardByWhere", bankCard);
	}

	@Override
	public Long getUnionSeq() {
		String seq = this.getOne("com.ucf.customer.getUnionSeq", "");
		return Long.parseLong(seq);
	}

	@Override
	public List<UcfBankCard> isBankCardBound(Map<String, String> map) throws Exception {
		return this.queryForList("com.ucf.customer.isBankCardBound", map);
	}
	
}