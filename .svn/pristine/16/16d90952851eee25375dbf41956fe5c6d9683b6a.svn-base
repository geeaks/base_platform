<%@ page contentType="text/html;charset=UTF-8" %>
<!DOCTYPE html>
<jsp:include page="../p2p/commons/resource_meta.jsp"/>
<jsp:include page="/WEB-INF/views/jsp/common/common.jsp"/>
<html>
<head>
<title>先锋支付</title>
<jsp:include page="commons/resource_css.jsp"/>
<link rel="stylesheet" href="${staticbase_platformPath}/p2p/css/find-pay-telephone.css">
<jsp:include page="commons/resource_js.jsp"/>
</head>
<body>
<section>
	<div class="et-nav">
		<div class="host_title">资金托管平台<span>修改手机号</span></div>
	</div>
	<div class="fd-main">
		<div class="fd-center">
			<div class="h_steps">
				<div class="h_steps_base">
					<div class="h_steps_green w1"></div>
				</div>
				<div class="h_steps1 h_steps_cur">
					<span>1</span>
					<p> 验证身份</p>
				</div>
				<div class="h_steps2">
					<span>2</span>
					<p>修改手机</p>
				</div>
				<div class="h_steps3 w60">
					<span>3</span>
					<p>修改成功</p>
				</div>
			</div>
			<div class="fd-layout">
				<div class="fd-center-title">
					<i></i>
					<div class="fdt_mian">您正在使用<span>"手机效验码"</span>验证身份，请填写以下信息</div>
				</div>
				<div class="fd-tab">
					<form action="${basePath}/p2p/modifyPhoneNo.do" method="post" id="modifyPhoneForm" name="modifyPhoneForm">
					<table>
						<colgroup>
							<col width="130" />
							<col width="455" />
						</colgroup>
						<tbody>
							<tr>
								<th>手机号码：</th>
								<td>${requestScope.phoneNo}</td>
							</tr>
							<tr>
								<th> 短信验证码：</th>
								<td>
									<input type="text" class="idbox w123" placeholder="请输入短信验证码"  id="vfyCode" name="vfyCode" maxlength="6" />
									<input id="validPhoneCode" type="button" onclick="sendSMS(${requestScope.phoneNo},0,'cellNoP2P_RECHARGE_REQUEST_INF_customer');" class="send_vfycode fd-btn-code" value="获得短信验证码" /><i id="sendSMSTipI"
													class="formvalidError formvalidError1" style="display: none;"></i><em id="sendSMSTipEm" class="f12"></em>
									<span class="msg-box" for="vfyCode"></span>
								</td>
							</tr>
							<tr>
								<td></td>
								<td>
									<input type="submit" value="下一步" class="but-yellow but-gray" />
								</td>
							</tr>
						</tbody>
					</table>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
</body>
</html>