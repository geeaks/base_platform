<%@ page contentType="text/html;charset=UTF-8" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<jsp:include page="/WEB-INF/views/jsp/common/common.jsp"/>
<title>找回支付密码</title>
<link rel="stylesheet" type="text/css"
	href="${staticbase_platformPath}/css/commons/index.css" />
<link rel="stylesheet" type="text/css"
	href="${staticbase_platformPath}/new/css/common.css" />
<script type="text/javascript" src="${staticbase_platformPath}/js/v1.js"></script>
<script type="text/javascript">
        var APP_ROOT = '';
        var ERROR_IMG = '/static/v1/images/common/image_err.gif';
        var send_span = 60000;
    </script>
<!--public js&css end -->
<!--private js&css start-->
<jsp:include page="../common/resource_css.jsp"/>
<link rel="stylesheet" type="text/css"
	href="${staticbase_platformPath}/new/css/host_findpassword.css"/>
<script type="text/javascript"
	src="${staticbase_platformPath}/new/js/host_findpassword.js"></script>
<link href="${staticbase_platformPath}/new/css/find-pay-password.css" rel="stylesheet"
	type="text/css" />
<!--private js&css end-->

<style type="text/css">
p.tip span {
	font-weight: 130px;
	background-color: yellow;
	color: red;
}

p.tipp span {
	font-weight: 130px;
	background-color: yellow;
	color: red;
}

p.tippp span {
	font-weight: 130px;
	background-color: yellow;
	color: red;
}

p.tipp span {
	font-weight: 130px;
	background-color: yellow;
	color: red;
}
</style>

</head>
<body>
	<c:import url="/common/head.htm"></c:import>
	<section>
		<div class="et-nav">
			<div class="host_title">
				找回支付密码
			</div>
		</div>
		<div class="fd-main">
			<div class="fd-center">

				<div class="fd-layout">
					<div class="fd-center-title">
						<i></i>
						<div class="fdt_mian">
							您正在使用<span>"手机效验码+安全问题"</span>验证身份，请填写以下信息
						</div>
					</div>
					<form action="${basePath}/setPasswd/findPasswdPro" method="post" id ="findPasswdPro">
						<div class="fd-tab">
							<table>
								<colgroup>
									<col width="130" />
									<col width="355" />
								</colgroup>
								<tbody>
									<tr>
										<th>账户名：</th>
										<td>${loginId }</td>
									</tr>
									<tr>
										<th>手机号码：</th>
										<td><label class="h_open_lab">${mobilePhone }</label>
										</td>
									</tr>
									<tr>
										<th>短信验证码：</th>
										<td>
										<input type="text" class="idbox w123 send_sms" placeholder="请输入手机验证码"  id="vercode" name="vercode" maxlength="6" />
										 <input id="validPhoneCode" type="button" onclick="sendSMSNew(${cell},1);"  value="获得手机验证码" />
                             			<span class="msg-box red" for="vercode"></span>
										</td>
									</tr>
									<tr>
										<th>安全保护问题：</th>
										<td><select name="quesInfo" class="h_open_sel">
												<option value="">请选择密保问题</option>
												<option value="1">1.我的宠物是</option>
												<option value="2">2.我的老公或妻子出生地是</option>
												<option value="3">3.我的老公或妻子生日是</option>
												<option value="4">4.我的小学校名是</option>
										</select></td>
									</tr>
									<tr>
										<th>答案：</th>
										<td><input type="text" id="res" name="res"
											class="idbox w228" placeholder="请输入保护问题答案" />
										</td>
									</tr>
									<tr>
										<td>
										</td>
										<td>
											<p class="tip">
												<span>${msg}</span>
											</p>
											<input type="submit" value="提交审核"
											class="but-gray but-yellow w130 mr15"> <a
											href="${basePath}/user/basicinfo.htm"
											class="but-gray but-blue w100 ml20" style="width: 132px">取消</a>
										</td>
									</tr>
								</tbody>
							</table>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
	<c:import url="/common/footer.htm"></c:import>

	<jsp:include page="../common/resource_js.jsp" />
</body>
<script>
$('#findPasswdPro').validator({
	stopOnError: false,
	 timely: true,
	fields: {
	   'quesInfo':{
			   rule: "required",
			   msg: {required: "请选择密保问题!"}
	   },
	   'vercode':'required;' ,
	   'res':'required;' 
	}
});
</script>
</html>
