package com.ucf.customer.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.ucf.customer.dao.UcfMerchantExtraDao;
import com.ucf.customer.pojo.UcfMerchantExtra;
import com.ucf.customer.service.UcfMerchantExtraService;
import com.ucf.customer.pojo.UcfUser;

@Service
public class UcfMerchantExtraServiceImpl implements UcfMerchantExtraService {
	
	@Autowired
	UcfMerchantExtraDao ucfMerchantExtraDao;
	
	@Override
	public void insertUcfMerchantExtra(UcfMerchantExtra ucfMerchantExtra) throws Exception {
		ucfMerchantExtraDao.insertUcfMerchantExtra(ucfMerchantExtra);
	}
	
	@Override
	public void updateUcfMerchantExtra(UcfMerchantExtra ucfMerchantExtra) throws Exception {
		ucfMerchantExtraDao.updateUcfMerchantExtra(ucfMerchantExtra);
	}
	
	@Override
	public UcfMerchantExtra queryUcfMerchantExtraById(String userId) throws Exception {
		UcfMerchantExtra ucfMerchantExtra = new UcfMerchantExtra();
		ucfMerchantExtra.setUserId(userId);
		List<UcfMerchantExtra> list = 
				ucfMerchantExtraDao.queryUcfMerchantExtraListByWhere(ucfMerchantExtra);
		return list!=null&&list.size()>0?list.get(0):null;
	}
	
	@Override
	public List<UcfMerchantExtra> queryUcfMerchantExtraList(UcfMerchantExtra ucfMerchantExtra) throws Exception {
		List<UcfMerchantExtra> list = 
				ucfMerchantExtraDao.queryUcfMerchantExtraListByWhere(ucfMerchantExtra);
		return list;
	}

	@Override
	public List<UcfUser> queryMainAccountList() throws Exception {
		List<UcfUser> list = ucfMerchantExtraDao.queryMainAccountList();
		return list!=null?list:null;
	}
}
