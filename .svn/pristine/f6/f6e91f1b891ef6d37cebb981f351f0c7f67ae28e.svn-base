<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- ===== [业务Appender] ===== -->
	<!-- [业务Appender] 摘要日志输出 -->
	<appender name="DEFAULT-DIG" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${loggingRoot}/biz/common-digest.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [/// - %X{requestURIWithQueryString}] %-5p %c{1} - %m%n" />
		</layout>
	</appender>
	<!-- [公共Appender] 默认日志输出(包含未分类日志输出) -->
	<appender name="DEFAULT-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${loggingRoot}/common-default.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [%X{MDC_CLIENT_IP}/%X{MDC_SERVER_IP}/%X{MDC_REQUEST_ID}/%X{MDC_SESSION} - %X{requestURIWithQueryString}] %-5p %c{1} - %m%n" />
		</layout>
	</appender>
	<!-- [公共Appender] 错误信息统计  -->
	<appender name="ERROR-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${loggingRoot}/common-error.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="error" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [%X{MDC_CLIENT_IP}/%X{MDC_SERVER_IP}/%X{MDC_REQUEST_ID}/%X{MDC_SESSION} - %X{requestURIWithQueryString}] %-5p %c{1} - %m%n" />
		</layout>
	</appender>
	<!-- [公共Appender] 性能统计 -->
	<appender name="PERF-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${loggingRoot}/common-perf.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [%X{MDC_CLIENT_IP}/%X{MDC_SERVER_IP}/%X{MDC_REQUEST_ID}/%X{MDC_SESSION} - %X{requestURIWithQueryString}] %-5p %c{1} - %m%n" />
		</layout>
	</appender>
	<!-- [公共Appender] 控制台STDOUT -->
	<appender name="STDOUT-APPENDER" class="org.apache.log4j.ConsoleAppender">
		<param name="encoding" value="UTF-8" />
		<param name="target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{2} - %m%n" />
		</layout>
	</appender>
	<!-- [公共Appender] 控制台STDERR -->
	<appender name="STDERR-APPENDER" class="org.apache.log4j.ConsoleAppender">
		<param name="encoding" value="UTF-8" />
		<param name="target" value="System.err" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{2} - %m%n" />
		</layout>
	</appender>
	<!-- [公共Appender] NULL -->
	<appender name="NULL-APPENDER" class="org.apache.log4j.varia.NullAppender" />
	<!-- [公共Appender] 数据访问 -->
	<appender name="DAO-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${loggingRoot}/common-dao.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [%X{MDC_CLIENT_IP}/%X{MDC_SERVER_IP}/%X{MDC_REQUEST_ID}/%X{MDC_SESSION} - %X{requestURIWithQueryString}] %-5p %c{1} - %m%n" />
		</layout>
	</appender>
	<!-- ===== [业务Appender] ===== -->
	<!-- [业务Appender] 默认业务日志输出 -->
	<appender name="DEFAULT-BIZ" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${loggingRoot}/biz/common-biz.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="info" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [%X{MDC_CLIENT_IP}/%X{MDC_SERVER_IP}/%X{MDC_REQUEST_ID}/%X{MDC_SESSION} - %X{requestURIWithQueryString}] %-5p %c{1} - %m%n" />
		</layout>
	</appender>
	<!-- [业务Appender] 会员业务日志输出 -->
	<appender name="base_platform-BIZ" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${loggingRoot}/base_platform-biz.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="info" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [%X{MDC_CLIENT_IP}/%X{MDC_SERVER_IP}/%X{MDC_REQUEST_ID}/%X{MDC_SESSION} - %X{requestURIWithQueryString}] %-5p %c{1} - %m%n" />
		</layout>
	</appender>
	<!-- MQ日志输出 -->
	<appender name="MQ-BIZ" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${loggingRoot}/biz/mq-biz.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [%X{MDC_CLIENT_IP}/%X{MDC_SERVER_IP}/%X{MDC_REQUEST_ID}/%X{MDC_SESSION} - %X{requestURIWithQueryString}] %-5p %c{1} - %m%n" />
		</layout>
	</appender>
	<!-- ===================================================================== -->
	<!-- Loggers -->
	<!-- ===================================================================== -->
	<!-- ===== [公共Logger] ===== -->
	<!-- [摘要日志] -->
	<logger name="DEFAULT.DIG" additivity="false">
		<level value="INFO" />
		<appender-ref ref="DEFAULT-DIG" />
	</logger>
	<!-- [公共Logger] 性能  -->
	<logger
		name="com.ucf.platform.framework.web.performance.filter.PerformanceMonitorFilter"
		additivity="false">
		<level value="INFO" />
		<appender-ref ref="PERF-APPENDER" />
	</logger>
	<logger
		name="com.ucf.platform.framework.log.aop.PerformanceMonitorInterceptor"
		additivity="false">
		<level value="INFO" />
		<appender-ref ref="PERF-APPENDER" />
	</logger>	
	<!-- [公共Logger] 控制台STDOUT - STDOUT -->
	<logger name="STDOUT" additivity="false">
		<level value="INFO" />
		<appender-ref ref="STDOUT-APPENDER" />
	</logger>
	<!-- [公共Logger] 控制台STDERR - STDERR -->
	<logger name="STDERR" additivity="false">
		<level value="${loggingLevel}" />
		<appender-ref ref="STDERR-APPENDER" />
	</logger>
	<!-- [框架Logger] 数据访问  SQL -->
	<logger name="java.sql" additivity="false">
		<level value="${loggingLevel}" />
		<appender-ref ref="DAO-APPENDER" />
		<appender-ref ref="ERROR-APPENDER" />
	</logger>
	<logger name="com.ibatis" additivity="false">
		<level value="${loggingLevel}" />
		<appender-ref ref="DAO-APPENDER"/>
		<appender-ref ref="ERROR-APPENDER"/>
	</logger>
	<logger name="org.mybatis" additivity="false">
		<level value="${loggingLevel}" />
		<appender-ref ref="DAO-APPENDER"/>
		<appender-ref ref="ERROR-APPENDER"/>
	</logger>
	<logger name="org.apache.ibatis" additivity="false">
		<level value="${loggingLevel}" />
		<appender-ref ref="DAO-APPENDER"/>
		<appender-ref ref="ERROR-APPENDER"/>
	</logger>
	<!-- log4jdbc option  log the jdbc sqltiming --> 
    <logger name="jdbc.sqltiming" additivity="false"> 
        <level value="${loggingLevel}" /> 
        <appender-ref ref="DAO-APPENDER" />
    </logger> 
	<!-- [公共业务日志] -->
	<logger name="com.ucf.customer" additivity="false">
		<level value="INFO" />
		<appender-ref ref="base_platform-BIZ" />
		<appender-ref ref="ERROR-APPENDER" />
	</logger>
	<!-- [框架Logger] 数据 DAO -->
	<logger name="com.ucf.customer.dao" additivity="false">
		<level value="${loggingLevel}" />
		<appender-ref ref="DAO-APPENDER" />
		<appender-ref ref="ERROR-APPENDER" />
	</logger>
		<!-- mq日志输出 -->
	<logger name="com.ucf.platform.framework.mq" additivity="false">
		<level value="INFO" />
		<appender-ref ref="MQ-BIZ" />
	</logger>
	<logger name="Rocketmq" additivity="false">
		<level value="ERROR" />
		<appender-ref ref="MQ-BIZ" />
	</logger>
	<logger name="com.alibaba.rocketmq" additivity="false">
		<level value="ERROR" />
		<appender-ref ref="MQ-BIZ" />
	</logger>
	<!-- ===================================================================== -->
	<!-- Root logger -->
	<!-- ===================================================================== -->
	<root>
		<level value="${loggingLevel}" />
		<appender-ref ref="DEFAULT-APPENDER" />
		<appender-ref ref="ERROR-APPENDER" />
	</root>
</log4j:configuration>