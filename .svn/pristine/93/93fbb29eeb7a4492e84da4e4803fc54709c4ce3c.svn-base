<%@ page contentType="text/html;charset=UTF-8"%>
<!DOCTYPE html>
<jsp:include page="../p2p/commons/resource_meta.jsp"/>
<jsp:include page="/WEB-INF/views/jsp/common/common.jsp"/>
<html>
<head>
<title>先锋支付</title>
<jsp:include page="commons/resource_css.jsp"/>
<jsp:include page="commons/resource_js.jsp"/>
<script type="text/javascript" src="${staticMemberPath}/p2p/js/use_reg/index.js"></script>
</head>
<body>
<section>
    <div class="box">
        <div class="main">
        	<div class="box_title pl30">资金托管平台<span>设置支付密码</span></div>
            <div class="w902 mauto">
            	<div class="h_open_tip clearfix  mtb25">
                	<i class="icon_tanhao fl mt5"></i>
                    <div class="fl pl15 pt10">为了保护您的账户的安全，请先设置您的支付密码!</div>
                </div>
                <form action="${basePath}/p2p/setFirstPayPwd" id="postForm" method="post">
                <div class="h_border_b f14">
                	<table class="user_info_table" cellpadding="0" cellspacing="0" border="0" width="100%">
                	<tr>
                    	<th width="150">先锋支付专属账号名：</th><td>${HID_user.loginId}</td>
                    </tr>
                    </table>
                </div>
                <div class="h_border_b">
                	<p class="f14"><strong class="color-yellow1">设置支付密码</strong> 付款或帐户信息更改时需输入，与登录密码不一样，安全级别更高</p>
                    <table>
                    	<colgroup>
                        	<col width="115">
                            <col width="785">
                        </colgroup>
                        <tbody class="h_open_tab f14">
                        	<tr>
                            	<th>支付密码：</th>
                                <td>
                                	<input id="newPassword" name="newPassword" type="password" class="idbox w228" placeholder="请输入支付密码">
                                </td>
                            </tr>
                            <tr>
                            	<th>再输入一次：</th>
                                <td>
									<input id="conPassword" name="conPassword" type="password" class="idbox w228" placeholder="请再次输入支付密码">
                            </tr>
                        </tbody>
                    </table>
                </div>
                
                <div class="pt30 pb100">
                	<p class="f14"><strong class="color-yellow1">此问题用于找回支付密码，请牢记  </strong> </p>
                    <table>
                    	<colgroup>
                        	<col width="115">
                            <col width="785">
                        </colgroup>
                        <tbody class="h_open_tab f14">
                        	<tr>
                            	<th>设置密保问题：</th>
                                <td>
                                	 <select class="h_open_sel" id="quesInfo" name="quesInfo">
                                    	<option value="">请选择密保问题</option>
					                     <option value="1">1.我的宠物是</option>
					                     <option value="2">2.我的老公或妻子出生地是</option>
					                     <option value="3">3.我的老公或妻子生日是</option>
					                     <option value="4">4.我的小学校名是</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                            	<th>答案：</th>
                                <td>
                                	<input id="quesRes" name="quesRes" type="text" class="idbox w228" maxlength="20" placeholder="请输入你的答案">
                                </td>
                            </tr>
                            <tr>
                            <th>
                                手机号：
                            </th>
                            <td>
                                <label class="h_open_lab">${HID_user.cell }</label>
                                <input id="validPhoneCode" type="button" class="send_vfycode h_open_ipt h_open_btn h_checkcode_btn ml10" onclick="sendSMS(${cellNo },0,'cellNoP2P_RECHARGE_REQUEST_INF_customer');" value="发送短信验证码"><i id="sendSMSTipI"
													class="formvalidError formvalidError1" style="display: none;"></i><em id="sendSMSTipEm" class="f12"></em>
                            </td>
                        </tr>
                        <tr>
                            <th>
                                短信验证码：
                            </th>
                            <td>
                                <input id="vfyCode" name="vfyCode" type="text" maxlength="6" class="idbox w123" placeholder="请输入短信验证码" />
                            </td>
                        </tr>
                            <tr>
                            	<th></th>
                                <td></td>
                            </tr>
                            <tr>
                            	<th></th>
                                <td>
                                <input name="merchantId" type="hidden" value="${merchantId}"/>
                                <input name="userId" type="hidden" value="${requestScope.HID_user['userId'] }"/>
                                	<input type="submit" value="提交" class="but-gray but-yellow w130 mr15">
                                    <a href="javascript:windowclose();" class="but-gray but-blue w100 ml20">取消</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                </form>
            </div>
        </div>
    </div>
</section>
</body>
</html>