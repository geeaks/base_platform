<%@ page contentType="text/html;charset=UTF-8" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<title> 找回登录密码</title>
<jsp:include page="/WEB-INF/views/jsp/common/common.jsp"/>
    <link rel="stylesheet" type="text/css" href="${staticMemberPath}/css/commons/index.css" />
    <link rel="stylesheet" type="text/css" href="${staticMemberPath}/new/css/common.css">
    <script type="text/javascript" src="${staticMemberPath}/js/v1.js"></script>
    <link rel="stylesheet" type="text/css" href="${staticMemberPath}/new/css/host_findpassword.css" />
    <script type="text/javascript" src="${staticMemberPath}/new/js/host_findpassword.js"></script>
    <link href="${staticMemberPath}/new/css/find-pay-password.css" rel="stylesheet" type="text/css" />
    <jsp:include page="../common/resource_css.jsp"/>
    <jsp:include page="../common/resource_js.jsp" />
    <link href="${staticMemberPath}/css/ucfgroup-nicevalidator-extends.css" rel="stylesheet">
</head>
<body>
<%-- <c:import url="/common/head.htm"></c:import> --%>
<jsp:include page="/WEB-INF/views/jsp/common/headforpwd.jsp" />
<section class="bgc-gray">
<div style="margin:0 auto; width:431px;">
<img style="margin-left:auto;margin-right:auto;" src="${staticMemberPath}/images/find-psw.png" class="find-img"/>
</div>
<div class="fd-main pt20">

<div class="main-body background-wite">
	<div class="info-lock">您正在使用“<span class="red">手机验证码+安全问题</span>”验证身份，请填写以下信息</div>
    <form class="ml150" action="${basePath}/lgnpwd/findPwdByPhone.htm" id="findPwdByPhone" method="post" data-validator-option="{theme:'ucfgroup_effect',timely:2}">
    	<input name="userNo" value="${loginId}" type="hidden">
    	<p><label for="name">账户名 :</label>
            ${loginId }</p>
        <p><label for="name">手机号码 :</label>
            ${mobilePhone}</p>
        <p><label for="name">短信验证码 :</label>
			<input type="text" class="idbox w123 send_sms" style=" vertical-align: middle;margin-bottom:2px;font-weight: normal;width:105px;margin-top:-3px;"  id="vercode" name="vercode" maxlength="6" data-tip="请输入6位验证码，如：888888"/>
			<input id="validPhoneCode" type="button" onclick="sendSMSReg();" style="height: 40px; font-size: 12px;padding-left:0px; width: 105px;margin-left:5px;" value="获取验证码"></p>
		<p><label for="name">安全保护问题 : </label> <select name="quesInfo" class="h_open_sel" style= "height: 40px;padding-left: 5px;border: 1px solid #bababa;line-height: 30px;font-size: 14px;padding-top:8px; color:#999;width:220px;" data-tip="请选择安全保护问题">
					<option value="">请选择密保问题</option>
					<option value="1">1.我的宠物是</option>
					<option value="2">2.我的老公或妻子出生地是</option>
					<option value="3">3.我的老公或妻子生日是</option>
					<option value="4">4.我的小学校名是</option>
			</select> 
        </p>
        <p><label for="name">安全保护答案 :</label>
            <input type="text" id="res" name="res" class="idbox w228"/></p>
        <span style="display:inline-block; margin-left:123px; color:#f85048;">${msg}</span>
        </br>
        <a class="btn mt20 mgl113" onclick="subForm();">下一步</a>
        </form>
</div>
</div>
</section>
<c:import url="/WEB-INF/views/jsp/common/newfooter.jsp"></c:import>
	
	<jsp:include page="../common/resource_js.jsp"/>
	
	<script>
	$(document).ready(function() {
		 $('#findPwdByPhone').validator({
				stopOnError: false,
				 timely: true,
				fields: {
				   'res':'required;',
				   'vercode':'required;' ,
				   'quesInfo':'required'
				}
			});
		 
		 $('#vercode').keyup(function(){
				var v = $(this).val();
				if(v!=null && v.length==6){
					$(this).trigger("validate");
				}
			});
			
		});
	
    function sendSMSReg(){
    	var obj = "${loginId}";
    	sendSMSNew(obj,0);
    };
    function subForm(){
    	$('#findPwdByPhone').submit();
    }
	</script>
<script src="${staticMemberPath}/js/jquery.validator.js" type="text/javascript"></script>
<script src="${staticMemberPath}/js/zh_CN.js" type="text/javascript"></script>
<script src="${staticMemberPath}/js/ucfgroup-nicevalidator-extends.js" type="text/javascript"></script>
</body>
</html>
