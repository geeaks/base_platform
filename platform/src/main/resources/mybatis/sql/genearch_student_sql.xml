<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gts.base.platform.genearchStudent">
	
	<resultMap id="genearchStudentMap" type="com.gts.base.platform.dao.entity.GenearchStudent" >
		<id property="Id" column="ID" jdbcType="INTEGER" />
		<id property="genearchId" column="GENEARCH_ID" jdbcType="INTEGER" />
		<result property="studentId" column="STUDENT_ID" jdbcType="INTEGER" />
		<result property="valid" column="VALID" jdbcType="VARCHAR" />
	</resultMap>
	
	<sql id="where_condition">
		<if test="genearchId != null">
			AND GENEARCH_ID=#{genearchId,jdbcType=INTEGER} 
		</if>
		<if test="studentId != null">
			AND STUDENT_ID=#{studentId,jdbcType=INTEGER} 
		</if>
		<if test="valid != null">
			AND VALID=#{valid,jdbcType=VARCHAR} 
		</if>
	</sql>
	
	<update id="updateGenearchStudent" parameterType="com.gts.base.platform.dao.entity.GenearchStudent">
		UPDATE GTS_GENEARCH_STUDENT SET VALID=#{valid,jdbcType=VARCHAR} WHERE ID=#{id}
	</update>
	
	<insert id="insertGenearchStudent" parameterType="com.gts.base.platform.dao.entity.GenearchStudent" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO GTS_GENEARCH_STUDENT (GENEARCH_ID,STUDENT_ID,VALID) VALUES 
		(#{genearchId,jdbcType=INTEGER},#{studentId,jdbcType=INTEGER},'Y')
	</insert>
	
	<select id="queryGenearchStudent" resultMap="genearchStudentMap" parameterType="com.gts.base.platform.dao.entity.GenearchStudent">
		SELECT ID,GENEARCH_ID,STUDENT_ID,VALID FROM GTS_GENEARCH_STUDENT 
		<where>
			<include refid="where_condition" />
		</where>
	</select>
	
	<select id="listPageGenearchStudent" resultMap="genearchStudentMap" parameterType="com.gts.base.platform.dao.entity.GenearchStudent" flushCache="true" >
		SELECT ID,GENEARCH_ID,STUDENT_ID,VALID FROM GTS_GENEARCH_STUDENT 
		<where>
			<include refid="where_condition" />
		</where>
	</select>
	
</mapper>
