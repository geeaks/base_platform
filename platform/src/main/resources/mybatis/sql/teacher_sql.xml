<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gts.base.platform.teacher">
	
	<resultMap id="teacherMap" type="com.gts.base.platform.dao.entity.Teacher" >
		<id property="teacherId" column="TEACHER_ID" jdbcType="INTEGER" />
		<result property="userId" column="USER_ID" jdbcType="INTEGER" />
		<result property="school" column="SCHOOL" jdbcType="VARCHAR" />
		<result property="major" column="MAJOR" jdbcType="VARCHAR" />
		<result property="grade" column="GRADE" jdbcType="VARCHAR" />
		<result property="gradeStage" column="GRADESTAGE" jdbcType="VARCHAR" />
		<result property="classes" column="CLASSES" jdbcType="VARCHAR" />
		<result property="level" column="LEVEL" jdbcType="VARCHAR" />
		<result property="gmtCreate" column="GMT_CREATE " jdbcType="TIMESTAMP" />
		<result property="gmtModify" column="GMT_MODIFY" jdbcType="TIMESTAMP" />
	</resultMap>
	
	<sql id="teacher_column">
		USER_ID,SCHOOL,MAJOR,GRADE,GRADESTAGE,CLASSES,LEVEL,GMT_CREATE,GMT_MODIFY
	</sql>
	
	<sql id="where_condition">
		<if test="userId != null">
			AND USER_ID=#{userId,jdbcType=INTEGER} 
		</if>
		<if test="major != null">
			AND MAJOR=#{major,jdbcType=VARCHAR} 
		</if>
		<if test="grade != null">
			AND GRADE=#{grade,jdbcType=VARCHAR} 
		</if>
		<if test="classes != null">
			AND CLASSES=#{classes,jdbcType=VARCHAR} 
		</if>
		<if test="level != null">
			AND LEVEL=#{level,jdbcType=VARCHAR} 
		</if>
	</sql>
	
	<insert id="insertTeacher" parameterType="com.gts.base.platform.dao.entity.Teacher" keyProperty="teacherId" useGeneratedKeys="true">
		INSERT INTO GTS_TEACHER <include refid="teacher_column" /> VALUES 
		<![CDATA[
		(#{userId,jdbcType=INTEGER},#{school,jdbcType=VARCHAR},#{major,jdbcType=VARCHAR},
		#{grade,jdbcType=VARCHAR},#{gradeStage,jdbcType=VARCHAR},#{classes,jdbcType=VARCHAR},
		#{level,jdbcType=VARCHAR},now(),now())
		]]>
	</insert>
	
	<update id="updateTeacher" parameterType="com.gts.base.platform.dao.entity.Teacher">
		UPDATE GTS_TEACHER SET GMT_MODIFY=now() 
		<if test="userId != null">
			,USER_ID=#{userId,jdbcType=INTEGER} 
		</if>
		<if test="major != null">
			,MAJOR=#{major,jdbcType=VARCHAR} 
		</if>
		<if test="grade != null">
			,GRADE=#{grade,jdbcType=VARCHAR} 
		</if>
		<if test="classes != null">
			,CLASSES=#{classes,jdbcType=VARCHAR} 
		</if>
		<if test="level != null">
			,LEVEL=#{level,jdbcType=VARCHAR} 
		</if>
		WHERE TEACHER_ID = #{teacherId}
	</update>
	
	<select id="queryTeacher" resultMap="teacherMap" parameterType="com.gts.base.platform.dao.entity.Teacher">
		SELECT TEACHER_ID,<include refid="teacher_column" /> FROM GTS_TEACHER 
		<where>
			<include refid="where_condition" />
		</where>
		ORDER BY GMT_CREATE DESC
	</select>
	
	<select id="listPageTeacher" resultMap="teacherMap" parameterType="com.gts.base.platform.dao.entity.Teacher" flushCache="true" >
		SELECT TEACHER_ID,<include refid="teacher_column" /> FROM GTS_TEACHER 
		<where>
			<include refid="where_condition" />
		</where>
		ORDER BY GMT_CREATE DESC
	</select>
	
	<select id="getTeacher" resultMap="teacherMap" parameterType="com.gts.base.platform.dao.entity.Teacher" >
		SELECT TEACHER_ID,<include refid="teacher_column" /> FROM GTS_TEACHER WHERE TEACHER_ID = #{teacherId}
	</select>
	
</mapper>
